<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreen">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="7dp"
            android:background="@drawable/button_back"
            tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/profile_pegawai"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Profile Pegawai"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UserName"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/UserName_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ActualName"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/ActualName_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/Address_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/Phone_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/Email_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UserStatus"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/UserStatus_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LevelID"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/LevelID_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IsAktif"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/IsAktif_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="KodeDivisi"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/KodeDivisi_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/Color_7"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:layout_marginStart="@dimen/_7sdp" />

                        </TableRow>

                    </TableLayout>

                    <Button
                        android:id="@+id/buttonLogout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:textColor="@color/white"
                        android:text="Logout"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>